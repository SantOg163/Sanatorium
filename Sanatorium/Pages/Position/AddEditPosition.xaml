<Page x:Class="Sanatorium.AddEditPosition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sanatorium"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPosition">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Title" Grid.Column="0" Height="64" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200"/>
        <TextBox MaxLength="50" Grid.Column="1" Grid.Row="1" Text="{Binding Title}" Width="200" Height="64" HorizontalAlignment="Left"></TextBox>
        <Button Content="Save" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Click="BtnSave_Click"></Button>
    </Grid>
</Page>
