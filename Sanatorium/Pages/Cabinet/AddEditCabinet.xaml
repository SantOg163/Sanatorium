<Page x:Class="Sanatorium.AddEditCabinet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sanatorium"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditCabinet">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Appointment" Width="200" Height="64" Grid.Column="0" HorizontalAlignment="Left"></TextBlock>
        <TextBox Width="200" Height="64" Grid.Column="1" HorizontalAlignment="Left" Text="{Binding Appointment}" MaxLength="50"></TextBox>
        <Button Content="Save" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Click="BtnSave_Click"></Button>
    </Grid>
</Page>
